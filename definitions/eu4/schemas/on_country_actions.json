{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://jorodox.org/schemas/on_country_actions.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "data": {
      "$mergeProps": [
        {
          "properties": {
            "events": {
              "type": "array",
              "items": {
                "$ref": "identifiers.json#/definitions/country_events"
              }
            },
            "random_events": {
              "anyOf": [
                {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^[0-9]+$": {
                      "$allowMultiple": {
                        "$ref": "identifiers.json#/definitions/country_events"
                      }
                    }
                  }
                },
                {
                  "type": "array",
                  "maxItems": 0
                }
              ]
            }
          }
        },
        {
          "$ref": "country_commands.json#/definitions/country_commands"
        }
      ]
    }
  }
}