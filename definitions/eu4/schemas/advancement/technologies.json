{
  "$id": "http://jorodox.org/schemas/technologies.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "namespace": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "monarch_power": {
          "$ref": "special_values.json#/definitions/monarch_power_type"
        },
        "ahead_of_time": {
          "$ref": "country_modifiers.json#/definitions/country_modifiers"
        }
      }
    },
    "id": {
      "type": "string",
      "$identifierValue": [
        {
          "type": "localisation",
          "prefix": "l_english.",
          "postfix": "_name"
        },
        {
          "type": "localisation",
          "prefix": "l_english.",
          "postfix": "_desc"
        }
      ]
    },
    "type": {
      "type": "string"
    },
    "comments": {
      "type": "string"
    },
    "data": {
      "$mergeProps": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "year": {
              "type": "number"
            },
            "military_tactics": {
              "$ref": "technologies.json#/definitions/number_and_localized"
            },
            "infantry_shock": {
              "type": "number"
            },
            "infantry_fire": {
              "type": "number"
            },
            "cavalry_shock": {
              "type": "number"
            },
            "cavalry_fire": {
              "type": "number"
            },
            "artillery_shock": {
              "type": "number"
            },
            "artillery_fire": {
              "type": "number"
            },
            "supply_limit": {
              "$ref": "technologies.json#/definitions/number_and_localized"
            },
            "sprite_level": {
              "type": "number"
            },
            "maneuver_value": {
              "type": "number"
            },
            "combat_width": {
              "type": "number"
            },
            "trade_range": {
              "type": "number"
            },
            "naval_maintenance": {
              "type": "number"
            },
            "allowed_idea_groups": {
              "type": "number"
            },
            "administrative_efficiency": {
              "$ref": "technologies.json#/definitions/number_and_localized"
            },
            "development_efficiency": {
              "$ref": "technologies.json#/definitions/number_and_localized"
            },
            "may_infiltrate_administration": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_agitate_for_liberty": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_corrupt_officials": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_sabotage_reputation": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_slander_merchants": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_sow_discontent": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_study_technology": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_fabricate_claims": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_support_rebels": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_steal_maps": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_sabotage_recruitment": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "may_force_march": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "allow_client_states": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "reduced_naval_attrition": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "merchants": {
              "$ref": "technologies.json#/definitions/boolean_and_localized"
            },
            "enable": {
              "$allowMultiple": {
                "$ref": "identifiers.json#/definitions/units"
              }
            }
          }
        },
        {
          "$identifierProperties": {
            "buildings": {
              "$ref": "special_values.json#/definitions/boolean"
            },
            "governments": {
              "$ref": "special_values.json#/definitions/boolean"
            }
          }
        },
        {
          "$ref": "country_modifiers.json#/definitions/country_modifiers"
        }
      ]
    }
  },
  "required": [
    "id",
    "namespace",
    "data"
  ],
  "definitions": {
    "boolean_and_localized": {
      "$ref": "special_values.json#/definitions/boolean",
      "$identifierValue": {
        "type": "localisation",
        "prefix": "l_english.",
        "usePropertyKey": true,
        "toUpperCase": true
      }
    },
    "number_and_localized": {
      "type": "number",
      "$identifierValue": {
        "type": "localisation",
        "prefix": "l_english.",
        "usePropertyKey": true,
        "toUpperCase": true
      }
    }
  }
}