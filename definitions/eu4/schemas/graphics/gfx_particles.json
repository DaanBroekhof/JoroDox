{
  "$id": "http://jorodox.org/schemas/gfx_particles.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "comments": {
      "type": "string"
    },
    "nr": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "particle"
      ]
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "subsystem": {
          "$allowMultiple": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "max_amount": {
                "type": "number"
              },
              "sort": {
                "type": "string",
                "enum": ["depth"]
              },
              "texture": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "shader": {
                    "$ref": "identifiers.json#/definitions/pdx_mesh_shaders"
                  },
                  "file": {
                    "$ref": "identifiers.json#/definitions/gfx_particle_textures"
                  }
                }
              },
              "position": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "x": {"type": "number"},
                  "y": {"type": "number"},
                  "z": {"type": "number"}
                }
              },
              "start": {
                "type": ["array", "number"],
                "items": {
                  "type": "number"
                }
              },
              "duration": {
                "type": "number"
              },
              "life": {
                "type": ["array", "number"],
                "items": {
                  "type": "number"
                }
              },
              "emission": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              "velocity": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              "velocity_pitch": {
                "$ref": "special_values.json#/definitions/2d_vector"
              },
              "velocity_yaw": {
                "$ref": "special_values.json#/definitions/2d_vector"
              },
              "size": {
                "type": "array",
                "items": [
                  {"type": ["string", "number"]}
                ]
              },
              "color": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "r": {"type": "array", "items": {"type": "number"}},
                  "g": {"type": "array", "items": {"type": "number"}},
                  "b": {"type": "array", "items": {"type": "number"}},
                  "alpha": {"type": "array", "items": {"type": ["number", "string"]}}
                }
              },
              "rotation": {
                "type": "array",
                "items": {
                  "type": [
                    "string",
                    "number"
                  ]
                }
              },
              "force": {
                "anyOf": [
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  {"type": "string"}
                ]
              }
            }
          }
        },
        "animation": {
          "$allowMultiple": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "time": {
                "type": "string",
                "enum": ["life_abs", "life", "spawn"]
              },
              "start": {
                "type": "number"
              },
              "duration": {
                "type": "number"
              },
              "repeat": {
                "$ref": "special_values.json#/definitions/boolean"
              },
              "op": {
                "type": "string",
                "enum": ["MUL", "ABS"]
              },
              "minValue": {
                "type": "number"
              },
              "maxValue": {
                "type": "number"
              },
              "curve": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              }
            }
          }
        },
        "force": {
          "$allowMultiple": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": ["planar", "turbulence", "friction"]
              },
              "name": {
                "type": "string"
              },
              "direction": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              "amount": {
                "type": "number"
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "id",
    "data"
  ]
}