{
  "$id": "http://jorodox.org/schemas/map_region.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "$ref": "identifiers.json#/definitions/localisation"
    },
    "data": {
      "anyOf": [
        {"$ref": "special_values.json#/definitions/empty_array"},
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "areas": {
              "type": "array",
              "items": {
                "$ref": "identifiers.json#/definitions/map_areas"
              }
            }
          }
        }
      ]
    }
  },
  "required": [
    "name",
    "data"
  ]
}