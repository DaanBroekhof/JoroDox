{
  "$id": "http://jorodox.org/schemas/map_rivers.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "path": {
      "type": "string"
    },
    "data": {
      "todo": "These colors are in BGR, not RGB - should improve the BMP reader to always return RGB",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "122,122,122": {
          "description": "Color of 'sea'",
          "$ref": "special_values.json#/definitions/color_adjacency"
        },
        "255,255,255": {
          "description": "Color of 'land'",
          "$ref": "special_values.json#/definitions/color_adjacency"
        },
        "255,225,0": {
          "description": "Color of a small river",
          "$ref": "special_values.json#/definitions/color_adjacency"
        },
        "255,200,0": {
          "description": "Color of a medium river",
          "$ref": "special_values.json#/definitions/color_adjacency"
        },
        "255,100,0": {
          "description": "Color of a large river",
          "$ref": "special_values.json#/definitions/color_adjacency"
        },
        "150,0,0": {
          "description": "A magical medium river that may flow against the height difference. Only found in Newfoundland atm.",
          "$ref": "special_values.json#/definitions/color_adjacency"
        },
        "100,0,0": {
          "description": "A magical large river that may flow against the height difference. Only found in Newfoundland atm.",
