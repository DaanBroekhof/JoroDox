{
  "$id": "http://jorodox.org/schemas/map_terrains.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "$ref": "identifiers.json#/definitions/map_terrain_categories"
        },
        "color": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "type": "number"
          }
        }
      }
    }
  },
  "required": [
    "name",
    "data"
  ]
}