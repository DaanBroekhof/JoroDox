{
  "$id": "http://jorodox.org/schemas/map_area.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "$identifierValue": [
        {
          "type": "localisation",
          "prefix": "l_english.",
          "require": {
            "data": "provinces",
            "operator": "is_empty",
            "value": false
          }
        },
        {
          "type": "localisation",
          "prefix": "l_english.",
          "postfix": "_adj",
          "require": [
            {"operator": "!regexp", "value": "(ocean|sea|pacific|atlantic|coast|gulf|channel|mediterrenean|strait|seas|baltic|triangle|kattegat|bight)_area$"},
            {"operator": "!regexp", "value": "^(sea_of|gulf|cape_of|bay_of|coast_of)"},
            {"data": "provinces", "operator": "is_empty", "value": false}
          ]
        },
        {
          "type": "localisation",
          "prefix": "l_english.",
          "postfix": "_name",
          "require": [
            {"operator": "!regexp", "value": "(ocean|sea|pacific|atlantic|coast|gulf|channel|mediterrenean|strait|seas|baltic|triangle|kattegat|bight)_area$"},
            {"operator": "!regexp", "value": "^(sea_of|gulf|cape_of|bay_of|coast_of)"},
            {"data": "provinces", "operator": "is_empty", "value": false}
          ]
        }
      ]
    },
    "provinces": {
      "anyOf": [
        {"$ref": "special_values.json#/definitions/empty_array"},
        {
          "type": "array",
          "items": {
            "$ref": "identifiers.json#/definitions/map_province_ids"
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "color": {
              "$ref": "special_values.json#/definitions/rgb_color"
            },
            "_array_":  {
              "type": "array",
              "items": {
                "$ref": "identifiers.json#/definitions/map_province_ids"
              }
            }
          }
        }
      ]
    }
  },
  "required": [
    "name",
    "provinces"
  ]
}