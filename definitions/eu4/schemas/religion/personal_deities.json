  "properties": {
    "name": {
      "type": "string"
    },
    "data": {
      "$mergeProps": [
        {
          "properties": {
            "sprite": {
              "type": "number"
            },
            "allow": {
              "$ref": "country_conditions.json#/definitions/country_conditions"
            },
            "ai_will_do": {
