{
  "$id": "http://jorodox.org/schemas/event_modifiers.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "$identifierValue": [
        {
          "type": "localisation",
          "prefix": "l_english.",
          "require": {"data": ["data"], "operator": "is_empty", "value": false}
        },
        {
          "type": "localisation",
          "prefix": "l_english.desc_",
          "require": {"data": ["data"], "operator": "is_empty", "value": false}
        }
      ]
    },
    "data": {
      "anyOf": [
        {
          "$mergeProps": [
            {"$ref": "country_modifiers.json#/definitions/country_modifiers"},
            {"$ref": "province_modifiers.json#/definitions/province_modifiers"},
            {"$ref": "rule_modifiers.json#/definitions/event_modifiers"},
            {
              "properties": {
                "picture": {"$ref": "identifiers.json#/definitions/interface_images_ideas_eu4"}
              }
            }
          ]
        },
        {
          "$ref": "special_values.json#/definitions/empty_array"
        }
      ]
    }
  },
  "required": [
    "name",
    "data"
  ]
}