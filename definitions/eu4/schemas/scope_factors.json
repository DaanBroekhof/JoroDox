{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://jorodox.org/schemas/scope_factors.json",
  "type": "object",
  "definitions": {
    "country_factor": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "factor": {
          "type": "number"
        },
        "modifier": {
          "$ref": "scope_factors.json#/definitions/country_factor_modifiers"
        }
      }
    },
    "country_factor_modifiers": {
      "$allowMultiple": {
        "$mergeProps": [
          {
            "properties": {
              "factor": {
                "type": "number"
              },
              "scale": {
                "$ref": "special_values.json#/definitions/boolean"
              },
              "force_potential": {
                "$ref": "special_values.json#/definitions/boolean"
              },
              "potential": {
                "$ref": "country_conditions.json#/definitions/country_conditions"
              }
            }
          },
          {
            "$ref": "country_conditions.json#/definitions/country_conditions"
          }
        ]
      }
    },
    "province_factor": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "factor": {
          "type": "number"
        },
        "modifier": {
          "$ref": "scope_factors.json#/definitions/province_factor_modifiers"
        }
      }
    },
    "province_factor_modifiers": {
      "$allowMultiple": {
        "$mergeProps": [
          {
            "properties": {
              "factor": {
                "type": "number"
              },
              "scale": {
                "$ref": "special_values.json#/definitions/boolean"
              },
              "force_potential": {
                "$ref": "special_values.json#/definitions/boolean"
              },
              "potential": {
                "$ref": "province_conditions.json#/definitions/province_conditions"
              }
            }
          },
          {
            "$ref": "province_conditions.json#/definitions/province_conditions"
          }
        ]
      }
    }
  }
}