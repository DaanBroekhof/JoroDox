{
  "$id": "http://jorodox.org/schemas/tradenodes.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "$ref": "identifiers.json#/definitions/localisation"
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "location": {
          "$ref": "identifiers.json#/definitions/map_province_ids"
        },
        "color": {
          "$ref": "special_values.json#/definitions/rgb_color"
        },
        "inland": {
          "$ref": "special_values.json#/definitions/boolean"
        },
        "end": {
          "$ref": "special_values.json#/definitions/boolean"
        },
        "ai_will_propagate_through_trade": {
          "$ref": "special_values.json#/definitions/boolean"
        },
        "outgoing": {
          "$allowMultiple": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "$ref": "identifiers.json#/definitions/localisation"
              },
              "path": {
                "type": "array",
                "items": {
                  "$ref": "identifiers.json#/definitions/map_province_ids"
                }
              },
              "control": {
                "todo": "What are these? Direction? Location? Arrow control?",
                "type": "array",
                "items": {
                  "type": "number"
                }
              }
            }
          }
        },
        "members": {
          "type": "array",
          "items": {
            "$ref": "identifiers.json#/definitions/map_province_ids"
          }
        }
      }
    }
  },
  "required": [
    "name",
    "data"
  ]
}