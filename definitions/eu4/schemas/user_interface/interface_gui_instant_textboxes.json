{
  "$id": "http://jorodox.org/schemas/interface_gui_instant_textboxes.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nr": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "data": {
      "$ref": "interface_gui_instant_textboxes.json#/definitions/instant_textbox_type"
    }
  },
  "required": [
    "id",
    "data"
  ],
  "definitions": {
    "instant_textbox_type": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "text": {
          "$ref": "special_values.json#/definitions/string_or_zero"
        },
        "font": {
          "todo": "mnultiple allowed?",
          "$allowMultiple": {
            "$ref": "identifiers.json#/definitions/interface_gui_bitmapfonts"
          }
        },
        "position": {
          "$ref": "special_values.json#/definitions/coordinate_xy"
        },
        "borderSize": {
          "$ref": "special_values.json#/definitions/coordinate_xy"
        },
        "maxWidth": {
          "type": "number"
        },
        "maxHeight": {
          "type": "number"
        },
        "textureFile": {
          "anyOf": [
            {"type": "number", "enum": [0]},
            {"$ref": "identifiers.json#/definitions/interface_images_fixpath"}
          ]
        },
        "format": {
          "$ref": "special_values.json#/definitions/gui_format"
        },
        "allwaystransparent": {
          "todo": "all or al??",
          "$ref": "special_values.json#/definitions/boolean"
        },
        "alwaystransparent": {
          "todo": "all or al??",
          "$ref": "special_values.json#/definitions/boolean"
        },
        "alwaysTransparent": {
          "todo": "all or al??",
          "$ref": "special_values.json#/definitions/boolean"
        },
        "fixedsize": {
          "$ref": "special_values.json#/definitions/boolean"
        },
        "truncate": {
          "$ref": "special_values.json#/definitions/boolean"
        },
        "orientation": {
          "$ref": "special_values.json#/definitions/gui_orientation"
        },
        "Orientation": {
          "$ref": "special_values.json#/definitions/gui_orientation"
        },
        "hint_tag": {
          "type": "string"
        },
        "scrollbartype": {
          "type": "string",
          "enum": ["standardtext_slider"]
        }
      }
    }
  }
}