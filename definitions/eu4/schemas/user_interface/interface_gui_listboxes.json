{
  "$id": "http://jorodox.org/schemas/interface_gui_listboxes.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nr": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "data": {
      "$ref": "interface_gui_listboxes.json#/definitions/listbox_type"
    }
  },
  "required": [
    "id",
    "data"
  ],
  "definitions": {
    "listbox_type": {
      "$mergeProps": [
        {
          "$ref": "interface_gui_basetypes.json#/definitions/base_type"
        },
        {
          "properties": {
            "backGround": {
              "type": "string",
              "todo": "add ref"
            },
            "background": {
              "type": "string",
              "todo": "add ref"
            },
            "horizontal": {
              "type": "number"
            },
            "spacing": {
              "type": "number"
            },
            "priority": {
              "type": "number"
            },
            "step": {
              "type": "number"
            },
            "size": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "position": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "offset": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "borderSize": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "scrollbartype": {
              "todo": "hook up reference",
              "type": "string"
            },
            "scrollbar_side": {
              "type": "string",
              "enum": ["LEFT", "RIGHT"]
            },
            "orientation": {
              "$ref": "special_values.json#/definitions/gui_orientation"
            },
            "Orientation": {
              "$ref": "special_values.json#/definitions/gui_orientation"
            },
            "allwaystransparent": {
              "$ref": "special_values.json#/definitions/boolean"
            },
            "alwaystransparent": {
              "todo": "all or al??",
              "$ref": "special_values.json#/definitions/boolean"
            },
            "if_resolution": {
              "$allowMultiple": {
                "$mergeProps": [
                  {
                    "properties": {
                      "max_height": {
                        "type": "number"
                      },
                      "min_height": {
                        "type": "number"
                      }
                    }
                  },
                  {
                    "$ref": "interface_gui_listboxes.json#/definitions/listbox_type"
                  }
                ]
              }
            }
          }
        }
      ]
    }
  }
}