{
  "$id": "http://jorodox.org/schemas/interface_gui_checkboxes.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nr": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "data": {
      "$ref": "interface_gui_checkboxes.json#/definitions/checkbox_type"
    }
  },
  "required": [
    "id",
    "data"
  ],
  "definitions": {
    "checkbox_type": {
      "$mergeProps": [
        {
          "$ref": "interface_gui_basetypes.json#/definitions/base_type"
        },
        {
          "properties": {
            "quadTextureSprite": {
              "type": "string"
            },
            "tooltip": {
              "type": "string"
            },
            "tooltipText": {
              "type": "string"
            },
            "buttonText": {
              "type": "string"
            },
            "delayedTooltipText": {
              "type": "string"
            },
            "buttonFont": {
              "$ref": "identifiers.json#/definitions/interface_gui_bitmapfonts"
            },
            "position": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "if_resolution": {
              "$allowMultiple": {
                "$mergeProps": [
                  {
                    "properties": {
                      "max_height": {
                        "type": "number"
                      },
                      "min_height": {
                        "type": "number"
                      }
                    }
                  },
                  {
                    "$ref": "interface_gui_checkboxes.json#/definitions/checkbox_type"
                  }
                ]
              }
            },
            "shortcut": {
              "type": [
                "string",
                "number"
              ]
            },
            "Orientation": {
              "$ref": "special_values.json#/definitions/gui_orientation"
            },
            "orientation": {
              "$ref": "special_values.json#/definitions/gui_orientation"
            }
          }
        }
      ]
    }
  }
}