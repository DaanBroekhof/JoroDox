{
  "$id": "http://jorodox.org/schemas/interface_gui_editboxes.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nr": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "data": {
      "$ref": "interface_gui_editboxes.json#/definitions/editbox_type"
    }
  },
  "required": [
    "id",
    "data"
  ],
  "definitions": {
    "editbox_type": {
      "$mergeProps": [
        {
          "$ref": "interface_gui_basetypes.json#/definitions/base_type"
        },
        {
          "properties": {
            "text": {
              "type": [
                "string",
                "number"
              ]
            },
            "size": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "font": {
              "$ref": "identifiers.json#/definitions/interface_gui_bitmapfonts"
            },
            "position": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "cursor": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "borderSize": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "textureFile": {
              "anyOf": [
                {
                  "$ref": "special_values.json#/definitions/empty_string_or_zero"
                },
                {
                  "$ref": "identifiers.json#/definitions/interface_images_fixpath"
                }
              ]
            },
            "ignore_tab_navigation": {
              "$ref": "special_values.json#/definitions/boolean"
            },
            "instantTextBoxType": {
              "$ref": "special_values.json#/definitions/boolean"
            },
            "Orientation": {
              "$ref": "special_values.json#/definitions/gui_orientation"
            },
            "orientation": {
              "$ref": "special_values.json#/definitions/gui_orientation"
            }
          }
        }
      ]
    }
  }
}