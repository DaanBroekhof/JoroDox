{
  "$id": "http://jorodox.org/schemas/interface_gui_scrollbars.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nr": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "data": {
      "$ref": "interface_gui_scrollbars.json#/definitions/scrollbar_type"
    }
  },
  "required": [
    "id",
    "data"
  ],
  "definitions": {
    "scrollbar_type": {
      "$mergeProps": [
        {
          "$ref": "interface_gui_basetypes.json#/definitions/base_type"
        },
        {
          "properties": {
            "slider": {
              "type": "string"
            },
            "track": {
              "type": "string"
            },
            "leftbutton": {
              "type": "string"
            },
            "rightbutton": {
              "type": "string"
            },
            "size": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "position": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "priority": {
              "type": "number"
            },
            "borderSize": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "maxValue": {
              "type": "number"
            },
            "minValue": {
              "type": "number"
            },
            "stepSize": {
              "type": "number"
            },
            "startValue": {
              "type": "number"
            },
            "scroll_speed": {
              "type": "number"
            },
            "horizontal": {
              "type": "number"
            },
            "guiButtonType": {
              "$allowMultiple": {
                "$ref": "interface_gui_buttons.json#/definitions/button_type"
              }
            }
          }
        }
      ]
    }
  }
}