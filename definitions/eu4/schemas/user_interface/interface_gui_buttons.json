{
  "$id": "http://jorodox.org/schemas/interface_gui_buttons.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "nr": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "data": {
      "$ref": "interface_gui_buttons.json#/definitions/button_type"
    }
  },
  "required": [
    "id",
    "data"
  ],
  "definitions": {
    "button_type": {
      "$mergeProps": [
        {
          "$ref": "interface_gui_basetypes.json#/definitions/base_type"
        },
        {
          "properties": {
            "parent": {
              "type": "string"
            },
            "quadTextureSprite": {
              "anyOf": [
                {
                  "$ref": "special_values.json#/definitions/empty_string_or_zero"
                },
                {
                  "$ref": "identifiers.json#/definitions/interface_gui_spritetypes"
                }
              ]
            },
            "if_resolution": {
              "$allowMultiple": {
                "$mergeProps": [
                  {
                    "properties": {
                      "max_height": {
                        "type": "number"
                      },
                      "min_height": {
                        "type": "number"
                      }
                    }
                  },
                  {
                    "$ref": "interface_gui_buttons.json#/definitions/button_type"
                  }
                ]
              }
            },
            "spriteType": {
              "$ref": "identifiers.json#/definitions/interface_gui_spritetypes"
            },
            "position": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "borderSize": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "size": {
              "$ref": "special_values.json#/definitions/coordinate_xy"
            },
            "tooltip": {
              "type": "string"
            },
            "tooltipText": {
              "type": "string"
            },
            "delayedTooltipText": {
              "type": "string"
            },
            "font": {
              "$ref": "identifiers.json#/definitions/interface_gui_bitmapfonts"
            },
            "buttonFont": {
              "anyOf": [
                {
                  "$ref": "special_values.json#/definitions/empty_string_or_zero"
                },
                {
                  "$ref": "identifiers.json#/definitions/interface_gui_bitmapfonts"
                }
              ]
            },
            "text": {
              "type": "string"
            },
            "buttonText": {
              "type": [
                "string",
                "number"
              ]
            },
            "Orientation": {
              "$ref": "special_values.json#/definitions/gui_orientation"
            },
            "orientation": {
              "$ref": "special_values.json#/definitions/gui_orientation"
            },
            "hint_tag": {
              "type": "string"
            },
            "shortcut": {
              "type": [
                "string",
                "number"
              ]
            },
            "extra_shortcut": {
              "type": "string"
            },
            "alwaystransparent": {
              "todo": "all or al??",
              "$ref": "special_values.json#/definitions/boolean"
            },
            "clicksound": {
              "anyOf": [
                {
                  "$ref": "special_values.json#/definitions/empty_string_or_zero"
                },
                {
                  "$ref": "identifiers.json#/definitions/sound"
                }
              ]
            },
            "format": {
              "$ref": "special_values.json#/definitions/gui_format"
            },
            "scale": {
              "type": "number"
            },
            "frame": {
              "type": "number"
            }
          }
        }
      ]
    }
  }
}