{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://jorodox.org/schemas/powerprojection.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "power": {
          "type": "number"
        },
        "yearly_decay": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "min": {
          "type": "number"
        }
      },
      "required": [
        "power"
      ]
    }
  }
}