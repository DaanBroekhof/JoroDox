{
  "$id": "http://jorodox.org/schemas/ruler_personalities.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "$identifierValue": [
        {
          "type": "localisation",
          "prefix": "l_english."
        },
        {
          "type": "localisation",
          "prefix": "l_english.",
          "postfix": "_die_desc"
        },
        {
          "type": "localisation",
          "prefix": "l_english.desc_"
        }
      ]
    },
    "data": {
      "$mergeProps": [
        {
          "properties": {
            "ruler_allow": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "allow": {
                  "$ref": "country_conditions.json#/definitions/country_conditions"
                },
                "chance": {
                  "$ref": "scope_factors.json#/definitions/country_factor"
                }
              }

            },
            "heir_allow": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "allow": {
                  "$ref": "country_conditions.json#/definitions/country_conditions"
                },
                "chance": {
                  "$ref": "scope_factors.json#/definitions/country_factor"
                }
              }

            },
            "consort_allow": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "allow": {
                  "$ref": "country_conditions.json#/definitions/country_conditions"
                },
                "chance": {
                  "$ref": "scope_factors.json#/definitions/country_factor"
                }
              }

            },
            "allow": {
              "$ref": "country_conditions.json#/definitions/country_conditions"
            },
            "chance": {
              "anyOf": [
                {"$ref": "scope_factors.json#/definitions/country_factor"},
                {"$ref": "special_values.json#/definitions/empty_array"}
              ]

            },
            "nation_designer_cost": {
              "description": "How many points does this ruler personality costs in the nation designer",
              "type": "number"
            },
            "custom_ai_explanation": {
              "type": "string"
            },
            "static": {
              "$ref": "special_values.json#/definitions/boolean"
            }

          }
        },
        {
          "$ref": "ruler_personalities.json#/definitions/ruler_modifiers"
        },
        {
          "$ref": "country_modifiers.json#/definitions/country_modifiers"
        }
      ]
    }
  },
  "required": [
    "name",
    "data"
  ],
