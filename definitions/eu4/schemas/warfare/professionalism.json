{
  "$id": "http://jorodox.org/schemas/professionalism.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "$ref": "identifiers.json#/definitions/localisation"
    },
    "data": {
      "$mergeProps": [
        {
          "properties": {
            "army_professionalism": {
              "type": "number"
            },
            "marker_sprite": {
              "$ref": "identifiers.json#/definitions/interface_gui_spritetypes"
            },
            "unit_sprite_start": {
              "$identifierValue": [
                {
                  "type": "interface_gui_spritetypes",
                  "postfix": "unitpanel_bg"
                },
                {
                  "type": "interface_gui_spritetypes",
                  "postfix": "regiment_bg"
                },
                {
                  "type": "interface_gui_spritetypes",
                  "postfix": "multiselection_bg"
                },
                {
                  "type": "interface_gui_spritetypes",
                  "postfix": "unitpanel_assign_leader_bg"
                }
              ]
            },
            "trigger": {
              "$ref": "country_conditions.json#/definitions/country_conditions"
            },
            "hidden": {
              "$ref": "special_values.json#/definitions/boolean"
            }
          }
        },
        {
          "$ref": "country_modifiers.json#/definitions/country_modifiers"
        },
        {
          "$ref": "rule_modifiers.json#/definitions/idea_rule_modifiers"
        }
      ]
    }
  }
}