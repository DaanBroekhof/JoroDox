{
  "$id": "http://jorodox.org/schemas/scripted_functions.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "data": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "condition": {
              "anyOf": [
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "tooltip": {"type": "string"},
                    "potential": {"$ref": "country_conditions.json#/definitions/country_conditions"},
                    "allow": {"$ref": "country_conditions.json#/definitions/country_conditions"}
                  }
                },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "tooltip": {"type": "string"},
                    "potential": {"$ref": "province_conditions.json#/definitions/province_conditions"},
                    "allow": {"$ref": "province_conditions.json#/definitions/province_conditions"}
                  }
                }
              ]

            }
          }
        },
        {"$ref": "special_values.json#/definitions/empty_array"}
      ]

    }
  },
  "required": [
    "name",
    "data"
  ]
}