{
  "$id": "http://jorodox.org/schemas/map_superregion.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "$identifierValue": [
        {
          "type": "localisation",
          "prefix": "l_english.",
          "require": [
            {"operator": "!regexp", "value": "sea_superregion$"}
          ]
        },
        {
          "type": "localisation",
          "prefix": "l_english.",
          "postfix": "_adj",
          "require": [
            {"operator": "!regexp", "value": "sea_superregion$"},
            {"operator": "!=", "value": "new_world_superregion"}
          ]
        },
        {
          "type": "localisation",
          "prefix": "l_english.",
          "postfix": "_name",
          "require": [
            {"operator": "!regexp", "value": "sea_superregion$"},
            {"operator": "!=", "value": "new_world_superregion"}
          ]
        }
      ]
    },
    "regions": {
      "anyOf": [
        {"$ref": "special_values.json#/definitions/empty_array"},
        {
          "type": "array",
          "items": {
            "$ref": "identifiers.json#/definitions/map_region"
          }
        }
      ]
    }
  },
  "required": [
    "name",
    "regions"
  ]
}