{
  "$id": "http://jorodox.org/schemas/map_positions.json",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "province": {
      "$ref": "identifiers.json#/definitions/map_province_ids"
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "position": {
          "type": "array",
          "minItems": 14,
          "maxItems": 14,
          "items": [
            {
              "description": "City model X",
              "type": "number"
            },
            {
              "description": "City model Y",
              "type": "number"
            },
            {
              "description": "Standing unit model X",
              "type": "number"
            },
            {
              "description": "Standing unit model Y",
              "type": "number"
            },
            {
              "description": "Province name X",
              "type": "number"
            },
            {
              "description": "Province name Y",
              "type": "number"
            },
            {
              "description": "Province port X",
              "type": "number"
            },
            {
              "description": "Province port Y",
              "type": "number"
            },
            {
              "description": "Province trade route X",
              "type": "number"
            },
            {
              "description": "Province trade route Y",
              "type": "number"
            },
            {
              "description": "Fighting unit X",
              "type": "number"
            },
            {
              "description": "Fighting unit Y",
              "type": "number"
            },
            {
              "description": "Trade wind icon X",
              "type": "number"
            },
            {
              "description": "Trade wind icon Y",
              "type": "number"
            }
          ]
        },
        "rotation": {
          "description": "Dictates the rotation of each element. The value here is rotations (rot). 1 rot = 360 degrees",
          "type": "array",
          "minItems": 7,
          "maxItems": 7,
          "items": [
            {
              "description": "City model rotation",
              "type": "number"
            },
            {
              "description": "Standing unit rotation",
              "type": "number"
            },
            {
              "description": "Province name rotation",
              "type": "number"
            },
            {
              "description": "Province port rotation",
              "type": "number"
            },
            {
              "description": "Province trade route rotation",
              "type": "number"
            },
            {
              "description": "Fighting unit rotation",
              "type": "number"
            },
            {
              "description": "Trade wind icon rotation",
              "type": "number"
            }
          ]
        },
        "height": {
          "description": "Dictates the height of each element. The value here is is roughly equal to 1 step in the greyscale used for the heightmap.bmp. So -1.00 results in a model one step below the base level (96), whilst 1.00 results in a model one step above.",
          "type": "array",
          "minItems": 7,
          "maxItems": 7,
          "items": [
            {
              "description": "City model height. Unfortunately, this only affects the central city model, and none of the additional ones that appear in high base tax provinces.",
              "type": "number"
            },
            {
              "description": "Standing unit height",
              "type": "number"
            },
            {
              "description": "Province name height, Does not actually change the height of the text in an obvious way. Never change this.",
              "type": "number"
            },
            {
              "description": "Province port height",
              "type": "number"
            },
            {
              "description": "Province trade route height",
              "type": "number"
            },
            {
              "description": "Fighting unit height",
              "type": "number"
            },
            {
              "description": "Trade wind icon height",
              "type": "number"
            }
          ]
        }
      }
    }
  },
  "required": [
    "province",
    "data"
  ]
}