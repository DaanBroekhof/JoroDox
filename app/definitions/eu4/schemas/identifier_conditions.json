{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://jorodox.org/schemas/identifier_conditions.json",
  "type": "object",
  "definitions": {
    "identifier_conditions": {
      "anyOf": [
        {"$ref" : "identifier_conditions.json#/definitions/province_id"},
        {"$ref" : "identifier_conditions.json#/definitions/country_tag"},
        {"$ref" : "identifier_conditions.json#/definitions/area"},
        {"$ref" : "identifier_conditions.json#/definitions/region"},
        {"$ref" : "identifier_conditions.json#/definitions/superregion"},
        {"$ref" : "identifier_conditions.json#/definitions/provincegroup"},
        {"$ref" : "identifier_conditions.json#/definitions/continent"},
        {"$ref" : "identifier_conditions.json#/definitions/trade_company"},
        {"$ref" : "identifier_conditions.json#/definitions/colonial_region"},
        {"$ref" : "identifier_conditions.json#/definitions/event_target"},
        {
          "properties": {
            "emperor": {
              "$ref": "country_conditions.json#/definitions/country_conditions"
            },
            "revolution_target": {
              "$ref": "country_conditions.json#/definitions/country_conditions"
            },
            "crusade_target": {
              "$ref": "country_conditions.json#/definitions/country_conditions"
            }
          }
        }
      ]
    },
    "province_id": {
      "patternProperties": {
        "^NOPE[0-9]+$": {
          "description": "Province ID",
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    },
    "country_tag": {
      "patternProperties": {
        "^NOPE[0-9]+$": {
          "description": "Country Tag",
          "$ref": "country_conditions.json#/definitions/country_conditions"
        }
      }
    },
    "area": {
      "patternProperties": {
        "^.+_area$": {
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    },
    "region": {
      "patternProperties": {
        "^.+$_region": {
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    },
    "superregion": {
      "patternProperties": {
        "^.+_superregion$": {
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    },
    "provincegroup": {
      "patternProperties": {
        "^NOPE.+$": {
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    },
    "continent": {
      "patternProperties": {
        "^NOPE.+$": {
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    },
    "trade_company": {
      "patternProperties": {
        "^trade_company_.+$": {
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    },
    "colonial_region": {
      "patternProperties": {
        "^colonial_.+$": {
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    },
    "event_target": {
      "patternProperties": {
        "^event_target:.+$": {
          "description": "Country Tag",
          "$TODO": "Make all_conditions",
          "$ref": "province_conditions.json#/definitions/province_conditions"
        }
      }
    }
  }
}